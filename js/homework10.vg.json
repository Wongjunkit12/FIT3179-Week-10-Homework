  {
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "params": [
      {
        "name": "Year_selection",
        "value": 2000,
        "bind": {
        "input": "range",
        "min": 2000,
        "max": 2020,
        "step": 1,
        "name": "Year: "
        }
      }
    ],
    "data": {
      "url": "data/Homework10_edited.csv",
      "format": {
        "type": "csv"
      }
    },
    "vconcat": [
      {
        "title": "Value of Exported Goods in Billions of US Dollars in 2020",
        "width": 1000,
        "height": 500,
        "data": {
          "url": "js/countries.topojson",
          "format": {
            "type": "topojson",
            "feature": "countries"
          }
        },
        "projection": {
          "type": "equalEarth"
        },
        "transform": [
          {
            "lookup": "Country",
            "from": {
              "data": {
                "url": "js/countries.topojson",
                "format": {
                  "type": "topojson",
                  "feature": "countries"
                }
              },
              "key": "properties.NAME"
            },
            "as": "geo"
          }
        ],
        "layer": [
          {
            "data": {
              "url": "js/oceans.topojson",
              "format": {"type": "topojson", "feature": "oceans"}
            },
            "mark": {"type": "geoshape", "fill": "lightcyan"}
          },
          {
            "data": {
              "url": "js/graticules.topojson",
              "format": {"type": "topojson", "feature": "graticules"}
            },
            "mark": {"type": "geoshape", "fill": null, "stroke": "lightgray"}
          },
          {
            "mark": {
              "type": "geoshape", "stroke": "gray"
            },
            "encoding": {
              "shape": {
                "field": "geo", 
                "type": "geojson"
              },
              "color": {
                "field": "Export (US$ Billion)",
                "type": "quantitative",
                "title": "Value of Exported Goods (US$ Billion)",
                "scale": {
                  "domain": [0, 5, 10, 50, 100, 250, 500, 1000, 3000],
                  "range": ["ffffff", "#ffffcc", "#c7e9b4", "#729a91", "#41b6c4", "#1d91c0", "#225ea8", "#215ca4", "#0c2c84"]
                }
              },
              "tooltip": [
                {"field": "properties.NAME", "type": "nominal", "title": "Country"},
                {"field": "Continent", "type": "nominal", "title": "Continent"},
                {"field": "Export (US$ Billion)", "type": "quantitative", "title": "Value of Exported Goods (US$ Billion)"}
              ]
            }
          }
        ]
      },
      {
        "title": {
          "text": "Global Capital Outflow: Countries' Imports in ",
          "subtitle": {
            "signal": "Year_selection"
          }
        },
        "width": 1000,
        "height": 500,
        "data": {
          "url": "data/Homework10_edited.csv",
          "format": {
            "type": "csv"
          }
        },
        "layer": [
          {
            "mark": "bar",
            "transform": [
              {
                "filter":"datum.Year == Year_selection"
              }
            ],
            "encoding": {
              "x": {
                "field": "Continent",
                "type": "nominal",
                "title": "Continent"
              },
              "y": {
                "field": "Import (US$ Billion)",
                "type": "quantitative",
                "title": "Capital Outflow in Imports (US$ Billion)"
              },
              "color": {
                "field": "Continent",
                "type": "nominal",
                "title": "Continent",
                "scale": {
                  "domain": [
                    "North America",
                    "South America",
                    "Europe",
                    "Africa",
                    "Asia",
                    "Oceania"
                  ],
                  "range": [
                    "#e41a1c",
                    "#984ea3",
                    "#ff7f00",
                    "#a6cee3",
                    "#377eb8",
                    "#a65628"
                  ]
                }
              },
              "opacity": {
                "value": 0.6
              },
              "tooltip": [
                {"field": "Country", "type": "nominal", "title": "Country"},
                {"field": "Continent", "type": "nominal", "title": "Continent"},
                {"field": "Year", "type": "quantitative", "title": "Year"},
                {"field": "Import (US$ Billion)", "type": "quantitative", "title": "Capital Outflow in Imports (US$ Billion)"}
              ]
            }
          }
        ]
      }
    ],
    "config": {}
  }
